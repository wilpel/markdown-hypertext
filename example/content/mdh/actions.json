{
  "spec": "mdh/1.0",
  "actions": [
    {
      "id": "flights.search",
      "node_id": "flights-search",
      "title": "Search Flights",
      "method": "GET",
      "url": "/api/flights/search",
      "accept": "application/json",
      "auth": { "type": "none" },
      "query": {
        "required": ["from", "to"],
        "optional": ["date", "cabin", "max_price", "limit", "cursor"]
      },
      "pagination": {
        "type": "cursor",
        "request": {
          "cursor_param": "cursor",
          "limit_param": "limit"
        },
        "response": {
          "next_cursor_jsonpath": "$.next_cursor"
        }
      }
    },
    {
      "id": "flights.get_offer",
      "node_id": "flights-search",
      "title": "Get Flight Offer",
      "method": "GET",
      "url": "/api/flights/offers/{id}",
      "accept": "application/json",
      "auth": { "type": "none" },
      "query": {
        "required": [],
        "optional": []
      }
    },
    {
      "id": "hotels.search",
      "node_id": "hotels-search",
      "title": "Search Hotels",
      "method": "GET",
      "url": "/api/hotels/search",
      "accept": "application/json",
      "auth": { "type": "none" },
      "query": {
        "required": ["city"],
        "optional": ["checkin", "checkout", "min_stars", "max_price", "guests", "limit", "cursor"]
      },
      "pagination": {
        "type": "cursor",
        "request": {
          "cursor_param": "cursor",
          "limit_param": "limit"
        },
        "response": {
          "next_cursor_jsonpath": "$.next_cursor"
        }
      }
    },
    {
      "id": "hotels.get",
      "node_id": "hotels-search",
      "title": "Get Hotel",
      "method": "GET",
      "url": "/api/hotels/{id}",
      "accept": "application/json",
      "auth": { "type": "none" },
      "query": {
        "required": [],
        "optional": []
      }
    }
  ]
}
